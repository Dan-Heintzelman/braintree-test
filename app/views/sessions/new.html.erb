<div>
  <% if @errors %>
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<h3 class='text-center'>Login to your Brainfreeze account!</h3>

<div class="container">
  <div class="row">
    <div class="col-sm-2">

    </div>
    <div class="col-sm-8">
    <%= form_for(:session, url: login_path, html: {role: 'form'}) do |f| %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit "Log In", class: "btn btn-default" %>

    <% end %>
    </div>
    <div class="col-sm-2">

    </div>
  </div>
</div>
